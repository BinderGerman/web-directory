---
interface Props {
  title: string;
  icon: string;
  description: string;
  count: number;
  slug: string;
}

const { title, icon, description, count, slug } = Astro.props;
---

<a href={`/categories/${slug}`} class="group block">
  <div class="bg-white rounded-xl overflow-hidden shadow-sm border border-line-light hover:shadow-md transition-all duration-300 transform hover:-translate-y-1 h-full">
    <div class="p-6">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center text-primary-600 mr-4">
          <span class="text-2xl" set:html={icon}></span>
        </div>
        <div>
          <h3 class="font-display text-xl font-medium text-content-subtle">{title}</h3>
          <p class="text-sm text-primary-600">{count} courses</p>
        </div>
      </div>
      <p class="text-content-base text-sm">{description}</p>
    </div>
  </div>
</a>
